# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# Python files
[*.py]
max_line_length = 88

[*.json]
indent_style = tab
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = true

# Exclude some directories
[**/__pycache__]
exclude = true

# Exclude virtual environment directories (if using virtualenv)
[**/venv]
exclude = true
